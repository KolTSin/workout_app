{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/SessionPlan.schema.json",
  "title": "SessionPlan",
  "type": "object",
  "required": ["id", "user_id", "date", "timezone", "session_type", "phase", "warmup", "items", "created_at"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "user_id": { "type": "string", "format": "uuid" },
    "date": { "type": "string", "format": "date" },
    "timezone": { "type": "string" },
    "session_type": {
      "type": "string",
      "enum": ["UPPER", "LOWER", "FULL", "CARDIO", "MOBILITY"]
    },
    "phase": {
      "type": "string",
      "enum": ["CALIBRATION", "TRAINING", "DELOAD"]
    },
    "readiness_hint": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "adjustment": {
          "type": "string",
          "enum": ["NONE", "LIGHTEN_LOAD_5", "REDUCE_ONE_SET", "EASIER_VARIATION"]
        }
      },
      "additionalProperties": false
    },
    "warmup": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind", "text"],
        "properties": {
          "kind": { "type": "string", "enum": ["GENERAL", "SPECIFIC"] },
          "text": { "type": "string" },
          "duration_seconds": { "type": ["integer", "null"], "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["order", "exercise_id", "name", "category", "prescription"],
        "properties": {
          "order": { "type": "integer", "minimum": 1 },
          "exercise_id": { "type": "string" },
          "name": { "type": "string" },
          "category": {
            "type": "string",
            "enum": ["COMPOUND", "ACCESSORY", "CORE", "CONDITIONING"]
          },
          "equipment": { "type": ["string", "null"] },
          "substitutions": {
            "type": "array",
            "items": { "type": "string" }
          },
          "prescription": {
            "type": "object",
            "required": ["sets"],
            "properties": {
              "sets": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["set_number"],
                  "properties": {
                    "set_number": { "type": "integer", "minimum": 1 },
                    "target_reps_min": { "type": ["integer", "null"], "minimum": 1 },
                    "target_reps_max": { "type": ["integer", "null"], "minimum": 1 },
                    "target_rpe": { "type": ["number", "null"], "minimum": 1, "maximum": 10 },
                    "rest_seconds": { "type": ["integer", "null"], "minimum": 0 },
                    "load_suggestion": {
                      "type": ["object", "null"],
                      "required": ["value", "unit", "kind"],
                      "properties": {
                        "kind": { "type": "string", "enum": ["KG", "LB", "BODYWEIGHT", "MACHINE_LEVEL"] },
                        "value": { "type": "number", "minimum": 0 },
                        "unit": { "type": "string" },
                        "rounding_step": { "type": ["number", "null"], "minimum": 0 }
                      },
                      "additionalProperties": false
                    },
                    "tempo": { "type": ["string", "null"] },
                    "notes": { "type": ["string", "null"] }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "created_at": { "type": "string", "format": "date-time" }
  },
  "additionalProperties": false
}
